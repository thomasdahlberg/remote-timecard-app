<%- include('../partials/header') %>

<div>
    <h5><%=session.userName%></h5>
    <h6><em><%=session.siteName%></em></h6>
    <p><strong>Latitude: </strong><%=session.punchClock.latitude%></p>
    <p><strong>Longitude: </strong><%=session.punchClock.longitude%></p>
    <p><strong>Proximity: </strong><%=session.punchClock.proximity%>km</p>
<form action="../" method="PUT">
    <input type="datetime-local" id="time-punch" name="time-punch" value="<%=formattedDate%>">
    <%if(session.punchClock.verified === true) { %>
    <p>
        <label>
            <input type="checkbox" checked="checked"/>
            <span>Verified?</span>
        </label>
    </p>
    <% } else { %>
    <p>
        <label>
            <input type="checkbox" />
            <span>Verified?</span>
        </label>
    </p>    
    <% } %>
    <br>
    <button class="btn waves-effect waves-light" type="submit" name="action">Update</button>
</form>
</div>

<%- include('../partials/footer') %>
